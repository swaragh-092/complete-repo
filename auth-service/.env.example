# ═══════════════════════════════════════════════════════
# Auth Service - Environment Variables
# Copy this file to .env and fill in the values
# ═══════════════════════════════════════════════════════

# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration
DB_HOST=localhost
DB_NAME=authzotion_db
DB_USER=postgres
DB_PASSWORD=your-secure-password-here
DB_PORT=5432

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=my-realm
KEYCLOAK_REALM_ID=1
KEYCLOAK_ACCOUNT_UI_CLIENT_SECRET=your-client-secret

# Frontend URLs
FRONTEND_URL=http://localhost:5174
AUTH_SERVICE_URL=http://localhost:4000

# Session Configuration
SESSION_SECRET=your-super-secret-random-string-here
SESSION_COOKIE_NAME=auth.sid
SESSION_COOKIE_DOMAIN=localhost
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_SAMESITE=lax

# Refresh Token Configuration
REFRESH_COOKIE_DOMAIN=localhost
REFRESH_COOKIE_SECURE=false
REFRESH_COOKIE_SAMESITE=lax
REFRESH_COOKIE_MAX_AGE=2592000

# CORS Configuration
TRUST_PROXY=false
CORS_FALLBACK_ORIGINS=http://localhost:3000,http://localhost:5174

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Device Fingerprinting
FP_SALT=your-secret-salt-here
DEVICE_TRUST_DURATION_DAYS=30
DEVICE_MAX_PER_USER=10
DEVICE_SIMILARITY_THRESHOLD=85

# Risk Scoring
RISK_NEW_USER_WEIGHT=40
RISK_NEW_DEVICE_WEIGHT=25
RISK_LOCATION_WEIGHT=15
RISK_TIME_WEIGHT=10
SERVICE_SECRET=
