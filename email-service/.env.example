# ─────────────────────────────────────────────────────────────────────────────
# Email Service — Environment Variables
# Copy to .env and edit with your values
# ─────────────────────────────────────────────────────────────────────────────

# Server
NODE_ENV=development
PORT=4011

# ── SMTP — Primary ──────────────────────────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password
FROM_EMAIL=no-reply@example.com

# SMTP Pool
POOL=true
MAXCONNECTIONS=5
MAXMESSAGES=100

# ── SMTP — Backup (optional, for failover) ──────────────────────────────────
# SMTP_BACKUP_HOST=smtp.backup.com
# SMTP_BACKUP_PORT=587
# SMTP_BACKUP_USER=backup-user
# SMTP_BACKUP_PASS=backup-password

# ── Application ─────────────────────────────────────────────────────────────
APP_NAME=My Application

# ── Security ────────────────────────────────────────────────────────────────
SERVICE_SECRET=generate-a-strong-secret-here

# ── Database (PostgreSQL) ───────────────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=email_service
DB_USER=postgres
DB_PASSWORD=your-db-password

# ── Redis (for BullMQ queue) ────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379

# ── Queue & Scheduling ─────────────────────────────────────────────────────
QUEUE_MAX_ATTEMPTS=3
LOG_RETENTION_DAYS=90
MAX_DELAY_MS=604800000
